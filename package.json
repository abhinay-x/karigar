{
  "name": "kala-ai",
  "version": "1.0.0",
  "description": "AI-powered marketplace for traditional artisans - Empowering 6.8M Indian craftspeople with voice commerce, heritage storytelling, and global market access",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && npm ci",
    "start": "cd backend && npm start",
    "install:all": "npm ci && cd backend && npm ci && cd ../frontend && npm ci",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ai",
    "artisan",
    "marketplace",
    "voice-commerce",
    "heritage",
    "handicrafts",
    "india",
    "traditional-crafts",
    "cultural-preservation",
    "digital-empowerment"
  ],
  "author": "KalaAI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhinay-x/kala-ai.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
